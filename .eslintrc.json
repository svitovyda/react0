{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": ["./tsconfig.json"],
    "tsconfigRootDir": "./",
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018
  },
  "plugins": [
    "react",
    "@typescript-eslint",
    "rxjs"
  ],
  "rules": {
    "rxjs/no-ignored-error": "error"
  },
  "ignorePatterns": ["src/gen/**", "./{platform,libraries,bundles}/*/{test}/**"]
}
